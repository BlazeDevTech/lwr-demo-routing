{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
    "routes": [
        {
            "id": "example",
            "path": "/",
            "layoutTemplate":"$layoutsDir/main.html",
            "rootComponent": "example/app"
        }, 
        {
            "id": "animal",
            "path": "/animal",
            "layoutTemplate":"$layoutsDir/main.html",
            "rootComponent": "example/app"
        }, 
        {
            "id": "animals",
            "path": "/animal/:animalType",
            "layoutTemplate":"$layoutsDir/main.html",
            "rootComponent": "example/app"
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "alias": "favicon",
            "file": "$rootDir/src/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ]
}
